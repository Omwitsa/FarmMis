@model AAAErp.ViewModel.SettingVm

<div class="container-fluid">
    <div class="row">
        <div class="main-header">
        </div>
    </div>

    <div class="row">
        <!--Basic Form starts-->
        <div class="col-sm">
            <div class="card">
                <div class="card-header">
                    <h5 class="card-header-text">Hr Setup</h5>
                    <div class="f-right">
                        <a href="" data-toggle="modal" data-target="#basic-form-Modal"><i class="icofont icofont-code-alt"></i></a>
                    </div>
                </div>

                <div class="card-block">
                    <form asp-action="HrSetup" enctype="multipart/form-data">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="row">
                            <div class="form-group col-xs-12 col-sm-12 col-lg-12">
                                <label class="form-control-label">Subject <span class="required">*</span></label>
                                <input asp-for="BirthdayMsgSbj" class="form-control" type="text" required>
                            </div>
                            @* <div class="form-group col-xs-12 col-sm-12 col-lg-12">
                                <label class="form-control-label">Message <span class="required">*</span></label>
                                <textarea asp-for="BirthdayMsg" class="form-control" required></textarea>
                            </div> *@
                            <div class="form-group col-xs-12 col-sm-12 col-lg-12">
                                <label class="form-control-label">Birthday Image <span class="required">*</span></label>
                                <input asp-for="BirthdayImg">
                            </div>
                        </div>
                        @if (ViewBag.hasEditRight)
                        {
                            <button type="submit" class="btn btn-primary waves-effect waves-light">Save</button>
                        }
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>